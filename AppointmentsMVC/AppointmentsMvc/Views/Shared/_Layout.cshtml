<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Appointment Booking", "Index", "Appointments", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (User != null && User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Appointments", "Index", "Appointments")</li>

                        <li class="dropdown">
                            <a id="dropMessage" href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">

                                <li>@Html.ActionLink("Profile", "Edit", "ProfessionalProfile")</li>
                                <li role="presentation" class="divider"></li>

                                <li>@Html.ActionLink("Set Working Hours", "Index", "ProfessionalWorkingHours")</li>
                                <li role="presentation" class="divider"></li>

                                <li>@Html.ActionLink("Company", "Edit", "CompanyProfile")</li>
                                <li role="presentation" class="divider"></li>

                                <li>@Html.ActionLink("Company Locations", "Index", "CompanyLocationGroups")</li>
                                <li role="presentation" class="divider"></li>

                                <li>@Html.ActionLink("Keys", "Index", "LK")</li>
                                <li role="presentation" class="divider"></li>
                            </ul>
                        </li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()


        @*<hr />*@

        <div style="margin-top:25px;">
            <p>&copy; @DateTime.Now.Year</p>
        </div>

        <footer>
            
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
